<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/rels">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/fanta"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="270dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rectangle"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:id="@+id/lins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="My Top 8 Foods"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/one"
            android:orientation="vertical"
            android:layout_below="@+id/lins"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/onetext"
                android:onClick="homeAddIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two"
            android:orientation="vertical"
            android:layout_below="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/twotext"
                android:onClick="homeAddIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/three"
            android:layout_below="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/threetext"
                android:onClick="homeAddIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/four"
            android:layout_below="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/fourtext"
                android:onClick="homeAddIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/five"
            android:layout_below="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/fivetext"
                android:onClick="homeAddIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/six"
            android:orientation="vertical"
            android:layout_below="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/sixtext"
                android:onClick="homeAddIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>


    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/cameraButton"
        android:elevation="10dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/picture"
        android:layout_gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="184dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/manualButton"
        android:elevation="10dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/manual"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="132dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/searchButton"
        android:elevation="10dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/search"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="79dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/addButton"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        app:fabSize="normal"
        android:src="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>