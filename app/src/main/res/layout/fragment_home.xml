<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/rels">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/fanta"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lins"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Favorite Food"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linn"
        android:orientation="vertical"
        android:layout_below="@+id/lins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aa"
        android:orientation="vertical"
        android:layout_below="@+id/linn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweet Corn"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linsz"
        android:layout_below="@+id/aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grapes"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linszz"
        android:layout_below="@+id/linsz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Pie"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linszs"
        android:layout_below="@+id/linszz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banana"
            android:textColor="#000"
            android:textSize="18sp"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/cameraButton"
        android:elevation="10dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/picture"
        android:layout_gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="184dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/manualButton"
        android:elevation="10dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/manual"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="132dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/searchButton"
        android:elevation="10dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/search"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="79dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/addButton"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        app:fabSize="normal"
        android:src="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>