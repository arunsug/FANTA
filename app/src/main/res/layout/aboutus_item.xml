<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.battleent.ribbonviews.RibbonLayout
            android:id="@+id/ribbonAbout"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:bottom_height="60"
            app:bottom_ribbonColor="#000"
            app:bottom_textColor="#FFF"
            app:bottom_textSize="15"
            app:header_padding="10"
            app:header_ribbonRadius="6"
            app:header_textSize="12"
            app:show_bottom="true"
            app:show_header="true">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="120dp" />

        </com.battleent.ribbonviews.RibbonLayout>

    </android.support.v7.widget.CardView>



