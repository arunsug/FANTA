<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNutritionIntake"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition Goals"
            android:textSize="25sp"
            android:textColor="#000"
            android:textStyle="bold"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lin"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/linCal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/cal"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/calories"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:layout_toEndOf="@+id/cal"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/calText"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linFat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/fat"
                    android:layout_marginTop="45dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/fat"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="Total Fat"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_toEndOf="@+id/fat"
                    android:gravity="center"/>

                <EditText
                    android:layout_marginTop="40dp"
                    android:id="@+id/fatText"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/linChol"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/cholesterol"
                    android:layout_marginTop="85dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/cholesterol"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="88dp"
                    android:text="Cholesterol"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_toEndOf="@+id/cholesterol"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/cholesterolText"
                    android:layout_marginTop="80dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linSod"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/sod"
                    android:layout_marginTop="125dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sodium"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="128dp"
                    android:text="Sodium"
                    android:textSize="15dp"
                    android:layout_toEndOf="@+id/sod"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/sodText"
                    android:layout_marginTop="120dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linPot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/potassium"
                    android:layout_marginTop="165dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/potassium"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="168dp"
                    android:text="Potassium"
                    android:textSize="15dp"
                    android:layout_toEndOf="@+id/potassium"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/potassiumText"
                    android:layout_marginTop="160dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linCarbs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/carbs"
                    android:layout_marginTop="205dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/carbohydrate"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="208dp"
                    android:text="Carbohydrates"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_toEndOf="@+id/carbs"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/carbsText"
                    android:layout_marginTop="200dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linFib"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/fiber"
                    android:layout_marginTop="245dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/fiber"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="248dp"
                    android:text="Dietary Fiber"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_toEndOf="@+id/fiber"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/fiberText"
                    android:layout_marginTop="240dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linSug"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/sug"
                    android:layout_marginTop="285dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sugar"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="288dp"
                    android:text="Sugars"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_toEndOf="@+id/sug"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/sugText"
                    android:layout_marginTop="280dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linProt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/prot"
                    android:layout_marginTop="325dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/proteins"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="328dp"
                    android:text="Protein"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_toEndOf="@+id/prot"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/protText"
                    android:layout_marginTop="320dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/capsule"
            android:text="SAVE"
            android:onClick="saveNutritionIntakeButton"
            android:textAlignment="center"
            android:layout_marginRight="20dp"/>

        <Button
            android:layout_toEndOf="@id/saveBtn"
            android:id="@+id/recBtn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/capsule"
            android:text="RECOMMENDED"
            android:onClick="recommendedButton"
            android:textAlignment="center"
            android:layout_gravity="center_vertical" />
    </RelativeLayout>

</RelativeLayout>
