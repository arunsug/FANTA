<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNutritionIntake"
    android:layout_margin="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Nutrition Intake"
            android:textSize="24sp"
            android:textColor="#000"
            android:textStyle="bold|italic"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calories"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_toEndOf="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter calories intake"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/carbs"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carbohydrate"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter carbohydrate intake"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/fat"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fat"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_marginTop="120dp"
            android:layout_toEndOf="@+id/fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter fat intake"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/prot"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/proteins"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_marginTop="180dp"
            android:layout_toEndOf="@id/prot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter protein intake"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/sod"
            android:layout_marginTop="240dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sodium"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_toEndOf="@+id/sod"
            android:layout_marginTop="240dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter sodium intake"
            android:textSize="15sp"/>


        <ImageView
            android:id="@+id/sug"
            android:layout_marginTop="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sugar"
            android:layout_marginRight="5dp"/>

        <EditText
            android:layout_marginTop="300dp"
            android:layout_toEndOf="@+id/sug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter sugar intake"
            android:textSize="15sp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp">


            <Button
                android:id="@+id/saveBtn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/capsule"
                android:text="SAVE"
                android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>
