<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <RelativeLayout
        android:id="@+id/rell"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textStyle="bold|italic"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle"
            android:layout_marginLeft="40dp"
            android:src="@drawable/profile"
            android:layout_toEndOf="@+id/myAcc"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rell"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gender"
                android:layout_marginRight="5dp"/>

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/gender">
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="genderGroupClick"
                    android:text="Female"/>
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="genderGroupClick"
                    android:text="Male"/>
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/linAge"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/birthdayP"
                    android:layout_marginTop="80dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/birthday"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="Age"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/birthdayP"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/ageText"
                    android:layout_marginTop="75dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linWeight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/weight"
                    android:layout_marginTop="130dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/weight"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:text="Weight"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/weight"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/weightText"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="125dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linHeight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/height"
                    android:layout_marginTop="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/height"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:text="Height"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/height"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/heightText"
                    android:layout_marginTop="175dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/running"
                android:layout_marginTop="230dp"/>

            <RadioGroup
                android:id="@+id/paGroup"
                android:layout_marginTop="230dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/gender">
                <RadioButton
                    android:id="@+id/sedentary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="paGroupClick"
                    android:text="Sedentary"/>
                <RadioButton
                    android:id="@+id/lowactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="paGroupClick"
                    android:text="Low Active"/>
                <RadioButton
                    android:id="@+id/active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="paGroupClick"
                    android:text="Active"/>
                <RadioButton
                    android:id="@+id/veryactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="paGroupClick"
                    android:text="Very Active"/>
            </RadioGroup>

        </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/capsule"
            android:onClick="saveClick"
            android:text="SAVE"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>