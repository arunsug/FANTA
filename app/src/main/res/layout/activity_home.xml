<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:paddingBottom="1dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/cameraButton"
        android:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="90dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/picture"
        android:layout_gravity="bottom|center"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/manualButton"
        android:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="150dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/manual"
        android:layout_gravity="bottom|center"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/searchButton"
        android:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="210dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/search"
        android:layout_gravity="bottom|center"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/freshButton"
        android:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="270dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/fresh"
        android:layout_gravity="bottom|center"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/addButton"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:fabSize="normal"
        android:src="@drawable/ic_add"
        android:layout_gravity="bottom|center"/>


</android.support.design.widget.CoordinatorLayout>