<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.projectfanta">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".NutritionInfo"
            android:label="@string/title_activity_nutrition_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HistoryFragment"
            android:label="@string/title_activity_history"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyAccountActivity"
            android:label="@string/title_activity_my_account"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".IndividualMyAccountActivity"
            android:label="MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangeNutritionIntake"
            android:label="@string/title_activity_change_nutrition_intake"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FreshFoodActivity"
            android:label="@string/title_activity_fresh_food"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- STEPHANIE UI THIS PLZ -->
        <activity android:name=".CameraActivity" />
        <activity android:name=".NutritionLabelConfirmActivity" />
        <!-- XX -->

        <activity
            android:name=".ManualEntryForm"
            android:label="@string/title_activity_manual_entry_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutUs"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AcceptRejectFollow"
            android:label="@string/title_activity_accept_reject_follow"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchFoodActivity"
            android:label="@string/title_activity_search_food"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FoodListActivity"
            android:label="@string/title_activity_food_list"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>